  <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<h2><%= link_to "Star Wars TripAdvisor", root_path %></h2>

<h3>Write a Review</h3>

<%= form_for [@planet, @review] do |f| %>
  <p>Your overall rating of this planet: </p>
    <%= radio_button_tag(:rating, 1) %>
    <%= label_tag(:rating_1, "1") %>
    <%= radio_button_tag(:rating, 2) %>
    <%= label_tag(:rating_2, "2") %>
    <%= radio_button_tag(:rating, 3) %>
    <%= label_tag(:rating_3, "3") %>
    <%= radio_button_tag(:rating, 4) %>
    <%= label_tag(:rating_4, "4") %>
    <%= radio_button_tag(:rating, 5) %>
    <%= label_tag(:rating_5, "5") %>
  <p>
    <%= f.label :title, "Title of your review" %><br />
    <%= f.text_field :title, placeholder: "Summarize your visit"%>
  </p>
  <p>
    <%= f.label :author_name, "Your Name" %><br />
    <%= f.text_field :author_name  %>
  </p>
  <p>
    <%= f.label :body, "Your Review" %><br />
    <%= f.text_area :body, placeholder: "Tell people about your experience" %>
  </p>
  <p>
    <%= f.submit 'Submit your review' %>
  </p>
<% end %>